{
  "manifest_version": 3,
  "name": "ProductScore - Laptop/Monitor Extension",
  "version": "2.0",
  "description": "Analyzes laptop and monitor specifications and provides a quality score",
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "ProductScore"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}